extends layout

block content
  p.welcome Welcome to #{title}
  form( class='form-search' role='form' action='/' method='post' )
            fieldset
                input( type='words', name='words', class='search-input', placeholder='',required autofocus)
                button(class="search-btn" type="submit") Search


  mixin result_item(item)
          .item_block
            a(href=item.doc_url target="_blank") #{item.doc_id}
            p #{item.doc_desc}
            p
  if result_items
        ul
            each item in result_items
                +result_item(item)
